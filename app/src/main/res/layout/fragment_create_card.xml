<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createCard">


    <ImageView
        android:id="@+id/ic_createcard_menue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu"
        tools:ignore="MissingPrefix,VectorDrawableCompat" />

    <ImageView
        android:id="@+id/ic_createcard_editor"
        android:layout_width="93dp"
        android:layout_height="29dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/txt_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ic_createcard_menue"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_select_stack"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:radius="15dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/ic_createcard_frame"
        app:layout_constraintStart_toStartOf="@+id/ic_createcard_frame"
        app:layout_constraintTop_toTopOf="@+id/ic_createcard_frame"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edittext_add_front"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:gravity="start"
        android:hint="Vorderseite eingeben"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/ic_createcard_frame"
        app:layout_constraintStart_toStartOf="@+id/ic_createcard_frame"
        app:layout_constraintTop_toBottomOf="@+id/spinner_select_stack" />

    <EditText
        android:id="@+id/edittext_add_back"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:gravity="start"
        android:hint="Rückseite eingeben"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/ic_createcard_frame"
        app:layout_constraintStart_toStartOf="@+id/ic_createcard_frame"
        app:layout_constraintTop_toBottomOf="@+id/edittext_add_front" />

    <Button
        android:id="@+id/button_create_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hinzufügen"
        app:layout_constraintBottom_toTopOf="@+id/button_home_editor"
        app:layout_constraintEnd_toEndOf="@+id/ic_createcard_frame"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/ic_createcard_frame"
        app:layout_constraintTop_toBottomOf="@+id/ic_createcard_frame"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ic_createcard_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_boxcreatecard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_createcard_editor"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/button_home_editor"
        android:layout_width="50dp"
        android:layout_height="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ic_home_add"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_home"
        tools:ignore="MissingPrefix,UnknownIdInLayout,VectorDrawableCompat" />

    <ImageView
        android:id="@+id/ic_createcard_favorites"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ic_createcard_add"
        app:srcCompat="@drawable/ic_favorites"
        tools:ignore="MissingPrefix,VectorDrawableCompat" />

    <ImageView
        android:id="@+id/ic_createcard_add"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ic_createcard_profile"
        app:srcCompat="@drawable/ic_add"
        tools:ignore="MissingPrefix,VectorDrawableCompat" />


    <ImageView
        android:id="@+id/ic_createcard_profile"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_profile"
        tools:ignore="MissingPrefix,VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>